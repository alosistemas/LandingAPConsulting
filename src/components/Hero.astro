---
interface Props {
  title: string;
  backgroundImage?: string;
}

const { title, backgroundImage = "/images/hero-background.jpg" } = Astro.props;
---

<section 
  class="relative h-[500px] flex items-center justify-start"
  style={`background-image: url(${backgroundImage}); background-size: cover; background-position: center;`}
>
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  <div class="container mx-auto px-4 relative z-10">
    <h1 class="text-white font-serif text-6xl font-bold max-w-3xl">
      {title}
    </h1>
  </div>
</section>