---
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const title = "Servicios | AP Consulting";
const description =
    "Cómo ayudamos a nuestros clientes a alcanzar el éxito con soluciones estratégicas.";
const services = await getCollection("services");
---

<MainLayout {title} {description}>
    <section class="container mx-auto px-4 py-12 text-gray-800">
        <div class="mb-6">
            <button
                id="back-button"
                type="button"
                class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition"
            >
                ← Volver
            </button>
        </div>
        <h1 class="text-3xl font-bold mb-6">Servicios</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {
                services.map((service) => {
                    const { slug, data } = service;
                    const { title, descripcion } = data;
                    return (
                        <div class="bg-white rounded-xl p-8 border border-gray-200 hover:shadow-2xl transition duration-300 group relative overflow-hidden">
                            <div class="absolute top-0 left-0 w-2 h-full bg-[#00338D] opacity-75" />
                            <h3 class="text-2xl font-serif font-bold mb-4 text-gray-800">
                                {title}
                            </h3>
                            <p class="text-gray-600 mb-6">{descripcion}</p>
                            <a
                                href={`/services/${slug}`}
                                class="text-[#00338D] font-medium hover:underline flex items-center transition-all duration-300 group-hover:font-bold"
                            >
                                Saber más
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform duration-300"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                            </a>
                        </div>
                    );
                })
            }
        </div>
    </section>
    <script>
        const buttons = document.querySelectorAll("button#back-button");

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                history.back();
            });
        });
    </script>
</MainLayout>
